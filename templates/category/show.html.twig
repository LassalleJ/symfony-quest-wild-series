{% extends 'base.html.twig' %}
{% block body %}
    {% for program in programs %}
        <h1>{{ program.id }} - <a href="{{ path("program_show", { id: program.id }) }}">{{ program.title }}</a></h1>
        <p>{{ program.synopsis }}</p>
        {% else %}
        <h2>Aucune série trouvée pour cette catégorie</h2>
    {% endfor %}

    <a href="{{ path('category_index') }}">
        Retour à la liste des catégories
    </a>
{% endblock %}